<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF6B35" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>
    
    <!-- Inner circle with segments -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Center dot -->
    <item android:left="140dp" android:top="140dp" android:right="140dp" android:bottom="140dp">
        <shape android:shape="oval">
            <solid android:color="#FF6B35" />
        </shape>
    </item>
</layer-list> 