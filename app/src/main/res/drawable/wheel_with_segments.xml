<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF6B35" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>
    
    <!-- Inner circle -->
    <item android:left="15dp" android:top="15dp" android:right="15dp" android:bottom="15dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Segment dividers -->
    <!-- Vertical line -->
    <item android:left="149dp" android:top="15dp" android:right="149dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF6B35" />
        </shape>
    </item>
    
    <!-- Horizontal line -->
    <item android:left="15dp" android:top="149dp" android:right="15dp" android:bottom="149dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF6B35" />
        </shape>
    </item>
    
    <!-- Diagonal lines for 8 segments -->
    <!-- Top right to bottom left -->
    <item android:left="15dp" android:top="15dp" android:right="15dp" android:bottom="15dp">
        <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF6B35" />
                <size android:width="2dp" android:height="270dp" />
            </shape>
        </rotate>
    </item>
    
    <!-- Top left to bottom right -->
    <item android:left="15dp" android:top="15dp" android:right="15dp" android:bottom="15dp">
        <rotate android:fromDegrees="-45" android:toDegrees="-45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF6B35" />
                <size android:width="2dp" android:height="270dp" />
            </shape>
        </rotate>
    </item>
    
    <!-- Center dot -->
    <item android:left="140dp" android:top="140dp" android:right="140dp" android:bottom="140dp">
        <shape android:shape="oval">
            <solid android:color="#FF6B35" />
        </shape>
    </item>
</layer-list> 